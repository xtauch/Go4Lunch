<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context=".activities.LoginActivity">

        <!-- MAIN CONTAINER -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <!-- IMAGE VIEW FIREBASE OC -->
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher_round"
                    android:layout_margin="@dimen/default_large_margin"/>

            <!-- TITLE FIREBASE OC -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/default_title_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/default_margin"/>

            <!-- DESCRIPTION FIREBASE OC -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size"
                    android:text="@string/main_activity_description"
                    android:layout_margin="@dimen/default_margin"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/login_google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/googleBackground"
                    android:id="@+id/googleLoginButton"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/login_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/facebookBackground"
                    android:id="@+id/facebookLoginButton"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>